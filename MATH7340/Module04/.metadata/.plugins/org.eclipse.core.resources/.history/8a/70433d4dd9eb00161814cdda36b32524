# problem 3
rm(list=ls())
require(mvtnorm)
#sim <- 10000
#blah <- rep(NA, sim)
#for (i in 1:sim){
#	matrix <- rmvnorm(50, mean=c(9,10), sigma=matrix(c(3,2,2,5), nrow=2))
#	meanX <- mean(matrix[,1])
